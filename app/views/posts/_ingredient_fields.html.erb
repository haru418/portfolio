<div class="js-file-group" data-index="${index}">
  <div class="new-ingredients">
    <div class="posts-new-content ingredient">
      <%= f.text_field :ingredient, placeholder: "材料", class: "ingredient-form" %>
      <%= f.text_field :amount, placeholder: "分量", class: "amount-form" %>
      <%= f.select :unit, [["大さじ", "大さじ"], ["小さじ", "小さじ"],
              ["ml", "ml"], ["cc","cc"], ["グラム", "グラム"], ["個", "個"], ["パック", "パック"], ["枚", "枚"],
              ["少々", "少々"], ["ひと摘み", "ひと摘み"]], include_blank: "未選択" %>
    </div>
    <div class="delete-form-button">
      <span class="delete-form-btn">
        削除する
      </span>
    </div>
  </div>
</div>
