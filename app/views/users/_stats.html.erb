<% @user ||= set_current_user %>
<% if current_page?(user_path(@user)) %>
  <div class="stats">
    <%= render 'users/recipes_stat' %>
  </div>
<% elsif current_page?(following_user_path(@user)) %>
  <div class="stats">
    <%= render 'users/following_stat' %>
  </div>
<% elsif current_page?(followers_user_path(@user)) %>
  <div class="stats">
    <%= render 'users/followers_stat' %>
  </div>
<% elsif current_page?(likes_user_path(@user)) %>
  <div class="stats">
    <%= render 'users/likes_stat' %>
  </div>
<% end %>