<div class="users-show-main">
  <div class="container">
    <div class="users">
      <div class="user">
        <div class="user-image-name">
          <div class="user-show-image">
            <%= image_tag "/assets/#{@user.image}", class:"user_show_image" %>
          </div>
          <div class="name-follow">
            <h2><%= @user.user_name %></h2>
            <%= render 'follow_form' if logged_in? %>
          </div>
          <% if @user.id == @current_user.id %>
            <%= link_to "ユーザー情報を編集", edit_user_path(@user.id), class:"user_edit_button" %>
          <% end %>
        </div>
        <div class="user-info">
          <%= render 'users/stats' %>
        </div>
      </div>
      <div class="user-show-search">
        <%#= render 'posts/search_form' %>
      </div>
      <div class="posts-user-items">
        <% @user.recipes.each do |recipe| %>
          <div class="col-lg-3 col-md-6 mb-4">
            <div class="cooking-image">
              <%= image_tag recipe.cooking_image.url %>
            </div>
            <div class="posts-bottom">
              <p class="cooking-name">
                <%= link_to recipe.cooking_name, post_path(recipe.id), class:"cooking_name" %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>